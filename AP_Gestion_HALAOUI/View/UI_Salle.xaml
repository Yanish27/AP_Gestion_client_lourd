<UserControl x:Class="AP_Gestion_HALAOUI.View.UI_Salle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AP_Gestion_HALAOUI.View"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="550" Background="Wheat">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Name="lbl_title" Content="Nom de la salle :" FontFamily="Arial" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Name="lbl_nomsalletxt" Content="Nom de la salle :" Grid.Row="0" Grid.Column="0"></Label>
            <Label Name="lbltxt" Content="Diffculté de la salle (sur 5) : " Grid.Row="0" Grid.Column="1"></Label>
        </Grid>
    </Grid>

</UserControl>
